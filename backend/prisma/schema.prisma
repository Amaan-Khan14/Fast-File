generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id   Int    @id @default(autoincrement())
  file File[]
}

model File {
  id          String   @id @default(uuid())
  fileName    String
  s3Key       String
  contentType String
  size        Int
  uploadedAt  DateTime @default(now())
  userId      Int
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
